    "version": "2.0.0",
    "command": "g++",
    "type": "shell",
    "tasks": [
        {
            "label": "Build",
			"args": [
				"-g",
                    "-std=c++11",
                    "main.cpp",
                    "src/getters.cpp",
                    "src/setters.cpp",
                    "src/readFile.cpp",
                    "src/setpointsdistance.cpp",
                    "src/rotations.cpp",
                    "src/translates.cpp",
                    "src/showmap.cpp",
                    "src/scaling.cpp",
                    "-o", "Builds/engine",
                    "-lmingw32",
                    "-lopengl32",
                    "-lglew32",
                    "-lglew32mx",
                    "-lglu32",
                    "-lSDL2main",
                    "-lSDL2",
                    "-lSDL2_image",
                    "-lSDL2_ttf"
			]
        }
    ]
}